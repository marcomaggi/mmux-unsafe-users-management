# doinst.sh.in --
#

set -e

# The group name, at most 16 characters.
#   0123456789012345
GRP=mmuxunsafeusers

chmod 0400 /etc/sudoers.d/mmux-unsafe-users-management.conf
chmod 0700 /etc/sudoers.d

/usr/sbin/groupadd --force $GRP

for item in \
    /usr/sbin/mmux-unsafe-users					\
    /etc/mmux/bash_login.d/mmux-unsafe-users-management.sh	\
    /etc/mmux/bash_logout.d/mmux-unsafe-users-management.sh	\
    /etc/mmux/xinitrc.d/mmux-unsafe-users-management.sh
do
    /bin/chgrp $GRP $item --verbose
    /bin/chmod o-rwx $item --verbose
done

exit 0

